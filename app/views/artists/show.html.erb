<h1>Artist: <%= @artist.name %></h1>

<h2>Songs:</h2>
    <ol>
        <% @songs.each do |song| %>
        <li><%= song.title %>
        <span> --- </span>
        <%= link_to 'Delete', artist_song_path(@artist, song), method: :delete %>
        </li>
        <% end %>
    </ol>



<p>Add New Song</p>


<%= form_for [@artist, @song] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.submit %>
<% end %>


<%= link_to 'Back to Artists List', artists_path %>
